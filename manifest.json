{
  "manifest_version": 3,
  "name": "ForeignAdmits AI Form Auto-Fill",
  "version": "1.1.0",
  "description": "AI-powered auto-fill for university forms using student data",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://backend.mydreamuniversity.in/*",
    "https://api.openai.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/constants.js",
        "utils/storage.js",
        "content/field-mapping.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ForeignAdmits AI Auto-Fill"
  }
}